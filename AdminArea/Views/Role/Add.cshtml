@model List<RoleViewModel>


<div class="container">
    <h1>System Roles</h1>

    @if (ViewBag.Invalid == 1)
    {
        <div class="alert alert-danger" role="alert">
            Sorry Can Not Add This Role !!!!!
        </div>
    }
    else if (ViewBag.Invalid == 2)
    {
        <div class="alert alert-success" role="alert">
            Role Added Succssfully
        </div>
    }
    <form asp-action="Add" asp-controller="Role">
        <div class="mb-3">
            <label class="form-label">Role Name</label>
            <input type="text" class="form-control" name="roleName">
        </div>
        <input type="submit" value="Add Role" />
    </form>



    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Delete" asp-controller="Role" asp-route-roleName="@item.Name">Delete </a>
                        <a asp-action="Edit" asp-controller="Role" asp-route-roleName="@item.Name">Edit </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
