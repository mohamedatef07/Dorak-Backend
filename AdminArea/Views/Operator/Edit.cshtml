@model Operator
@section styles {
    <link rel="stylesheet" href="~/css/components.css" />
}
@{
    ViewData["Title"] = "Edit Operators";
}

<h1 class="mb-3">Edit Operator</h1>
<form asp-controller="operator" asp-action="edit" method="post">
    <input class="form-control" asp-for="OperatorId" hidden />
    <div class="form-group">
        <label class="form-label fw-bold" asp-for="FirstName">First Name</label>
        <input class="form-control" asp-for="FirstName" />
    </div>
    <div class="form-group">
        <label class="form-label fw-bold" asp-for="LastName">Last Name</label>
        <input class="form-control" asp-for="LastName" />
    </div>
    <input class="btn btn-secondary mt-3" type="submit" value="Edit" />
    <a asp-controller="operator" asp-action="index" class="btn btn-primary text-white ms-3 mt-3">Back to List</a>
</form>