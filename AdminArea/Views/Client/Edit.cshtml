@model Client
@section styles {
    <link rel="stylesheet" href="~/css/components.css" />
}

<h1 class="mb-3">Edit Client</h1>
<form asp-controller="client" asp-action="edit" method="post">
    <input class="form-control" asp-for="ClientId" hidden />
    <div class="form-group">
        <label class="form-label fw-bold" asp-for="FirstName">First Name</label>
        <input class="form-control" asp-for="FirstName" />
    </div>
    <div class="form-group">
        <label class="form-label fw-bold" asp-for="LastName">Last Name</label>
        <input class="form-control" asp-for="LastName" />
    </div>
        <div class="form-group">
        <label class="form-label fw-bold" asp-for="City">City</label>
        <input class="form-control" asp-for="City" />
    </div>
    <div class="form-group">
        <label class="form-label fw-bold" asp-for="Governorate">Governorate</label>
        <input class="form-control" asp-for="Governorate" />
    </div>
    <div class="form-group">
        <label class="form-label fw-bold" asp-for="Country">Country</label>
        <input class="form-control" asp-for="Country" />
    </div>
    <input class="btn btn-secondary mt-3" type="submit" value="Edit" />
    <a asp-controller="client" asp-action="index" class="btn btn-primary text-white ms-3 mt-3">Back to List</a>
</form>