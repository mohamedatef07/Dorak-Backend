@model Provider
@section styles {
    <link rel="stylesheet" href="~/css/components.css" />
}
@{
    ViewData["Title"] = "Center Providers";
}

<h1 class="mb-3">Edit Provider</h1>
<form asp-controller="Provider" asp-action="edit" method="post">
    <input class="form-control" asp-for="ProviderId" hidden />
    <div class="form-group">
        <label class="form-label fw-bold" asp-for="FirstName">First Name</label>
        <input class="form-control" asp-for="FirstName" />
    </div>
    <div class="form-group">
        <label class="form-label fw-bold" asp-for="LastName">Last Name</label>
        <input class="form-control" asp-for="LastName" />
    </div>

    <div class="form-group">
        <label class="form-label fw-bold" asp-for="Specialization">Specialization</label>
        <input class="form-control" asp-for="Specialization" />
    </div>
    <div class="form-group">
        <label class="form-label fw-bold" asp-for="ExperienceYears">Experience Years</label>
        <input class="form-control" asp-for="ExperienceYears" />
    </div>
    <div class="form-group">
        <label class="form-label fw-bold" asp-for="Bio">Bio</label>
        <textarea class="form-control" asp-for="Bio"></textarea>
    </div>
    <div class="form-group">
        <label class="form-label fw-bold" asp-for="LicenseNumber">License Number</label>
        <input class="form-control" asp-for="LicenseNumber" />
    </div>
    <div class="form-group">
        <label class="form-label fw-bold" asp-for="EstimatedDuration">Estimated Duration</label>
        <input class="form-control" asp-for="EstimatedDuration" />
    </div>
    <input class="btn btn-secondary mt-3" type="submit" value="Edit" />
    <a asp-controller="provider" asp-action="index" class="btn btn-primary text-white ms-3 mt-3">Back to List</a>
</form>